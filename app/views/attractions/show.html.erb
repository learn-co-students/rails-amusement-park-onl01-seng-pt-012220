
<h3> Name: <%=@attr.name%> </h3> </br>
<h3> Tickets: <%=@attr.tickets%> </h3> </br>
<h3> Nausea Rating: <%=@attr.nausea_rating%> </h3> </br>
<h3> Minimum Height: <%=@attr.min_height%> </h3> </br>



<% if @user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path%>
<%else%>
<%= form_tag ride_path do %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :attraction_id, @attr.id %>
    <%= submit_tag 'Go on this ride' %>
  <% end %>
<%end%>